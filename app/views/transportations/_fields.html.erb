    <%= f.label :time, "Время погрузки:" %><br />
    <%= f.text_field :time %>
  </div>
  <div class="field">
    <%= f.label :area, "Склад погрузки" %><br />
    <%= f.collection_select :area_id, Area.all, :id, :name %>
  </div>
  <div class="field">
    <%= f.label :client, "Клиент:" %><br />
    <%= f.collection_select :client_id, Client.all, :id, :name %>
  </div>
  <div class="field">
    <%= f.label :storage_dist, "Склад доставки:" %><br />
    <%= f.collection_select :city_id, City.active, :id, :name %>
