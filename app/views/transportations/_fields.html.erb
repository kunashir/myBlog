  <div class="field">
    <%= f.label :comment, "Комментарий:" %><br />
    <%= f.text_field :comment %>
  </div>

  <div class="field">
    <%= f.label :weight, "Тоннаж:" %><br />
    <%= f.text_field :weight %>
  </div>
  <div class="field">
    <%= f.label :volume, "Объем(куб. м.):" %><br />
    <%= f.text_field :volume %>
  </div>
   <div class="field">
    <%= f.label :carcase, "Тип кузова:" %><br />
    <%= f.select :carcase, options_for_select([['реф', 'реф'], ['термос', 'термос'], ['тент', 'тент'] ], @transportation.carcase) %>
  </div>
   <div class="field">
    <%= f.label :start_sum, "Нач. сумма:" %><br />
    <%= f.text_field :start_sum, :readonly => true %>
