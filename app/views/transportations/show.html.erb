  <tr>
    <td>
     <strong>Тип транспортного средства:</strong>
    </td>
    <td>
     <%= @transportation.type_transp %>
    </td>
  </tr>
  <tr>
    <td>
     <strong>Тоннаж:</strong>
    </td>
    <td>
     <%= @transportation.weight %>
    </td>
  </tr>
  <tr>
    <td>
     <strong>Тип кузова:</strong>
    </td>
    <td>
     <%= @transportation.carcase %>
    </td>
  </tr>
  <tr>
    <td>
     <strong>Нач. сумма:</strong>
