  <tr>
    <td>
     <strong>Дата перевозки:</strong>
    </td>
    <td>
     <%= @transportation.date %>
    </td>
  </tr>
  <tr>
    <td>
     <strong>Время погрузки:</strong>
    </td>
    <td>
     <%= @transportation.time %>
    </td>
  </tr>
  <tr>
    <td>
     <strong>Склад погрузки:</strong>
    </td>
    <td>
     <%= @transportation.storage_source %>
    </td>
