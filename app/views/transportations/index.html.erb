<% if manager? %>
  <%= link_to "Добавить заявку", new_transportation_path %>
  <% if manager? or is_admin? %>
    | <%= link_to "Пакетная загрузка", transportations_path+"/-1/packet" %>
    | <%= link_to "Сохранить в xls", transportations_path+"/-1/export" %> 
  <% end %>
<% end %>	
<div class = "server_time" id = "server_time" ></div>
<h1>Заявки на перевозку:<%= @filter_text %></h1>
<%= form_tag( transportations_path, :method => "get") do %>
  <%= label_tag(:q, "Дата для отбора:") %>
  <%= text_field_tag :datepicker, nil, :class => "datepicker" %>
  <br><%= label_tag(:q, "Показать все заявки (по-умолчанию только активные):") %>
  <%= check_box_tag :show_all, 1 %>
  <br><%= label_tag(:q, "Склад погрузки:") %>
<%= select_tag :storage_source, options_for_select([['',''],['Трубный', 'Трубный'], ['Сенцово', 'Сенцово'], ['Дятьково', 'Дятьково'],['Доватора','Доватора'] ]) %>
  <br><%= submit_tag("Отобрать") %>
<% end %>
<%= will_paginate %>
<table class="transp">
  <tr>
    <td class = "tr">Номер распр.</td>
    <td class = "tr">Дата рейса</td>
    <td class = "tr">Время погрзуки</td>
    <td class = "tr">Склад погрузки</td>
    <td class = "tr">Клиент</td>
    <td class = "tr">Склад выгрзуки</td>
    <td class = "tr">Тоннаж</td>
    <td class = "tr">Объем</td>    
    <td class = "tr">Примечание</td>
    <td class = "tr">Тип кузова</td>
    <td class = "tr">Нач. сумма за лот(руб.)</td>
    <td class = "tr">Лучшее предложение за лот (руб.)</td>
    <td class = "tr">Шаг цены для лота</td>
    <% if manager? or is_admin? %>
      <td class = "tr">ТЭК</td>
    <% else %>	  
      <td class = "tr">Сделать ставку</td>
    <% end %>	  
  </tr>
    
    <%= render @transportations %>
  
  
 </table>
<%= will_paginate %>
