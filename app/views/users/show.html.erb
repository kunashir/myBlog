<table class="profile" summary="Profile information">
  <tr>
    <td class="main">
      <h1>
        <%= gravatar_for @user %><%= @user.name %>
      </h1>
    </td>
    <td class="sidebar">
      <strong>Имя:</strong><%= @user.email %><br />
      <strong>Компания:</strong><%= @user.company.name %><br />
      <strong>URL:</strong><%= link_to user_path(@user), @user %><br />
      <%= link_to "Редактировать профиль", edit_user_path(@user) %>
      <% if current_user.company.is_freighter? %>
        <br><%= link_to "Машины", avtos_path %>
        <br><%= link_to "Водители", drivers_path %>
      <% else %>
        <br><%= link_to "Клиенты", clients_path %>
      <% end %>
      
    </td>
  </tr>
</table>



